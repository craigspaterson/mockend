{
  "User": {
    "id": {
      "int": {}
    },
    "name": {
      "string": {}
    },    
    "email": {
      "regexp": "#[a-z]{5,10}@[a-z]{5}\\.[a-z]{2,3}"
    },
    "address": {
      "street": {
        "string": {}
      }
    },
    "avatarUrl": {
      "regexp": "https://i\\.pravatar\\.cc/150\\?u=[0-9]{5}"
    },
    "statusMessage": {
      "string": [
        "working from home",
        "watching Netflix"
      ]
    },
    "color": {
      "regexp": "#[0-9A-F]{6}"
    },
    "age": {
      "int": {
        "min": 21,
        "max": 100
      }
    },
    "isPublic": {
      "boolean": {}
    }
  },
"Post": {
    "title": { "string": {} },
    "comments": {
      "hasMany": "Comment"
    }
  },
  "Comment": {
    "body": { "string": {} },
    "post": {
      "belongsTo": "Post"
    }
  }  
}
